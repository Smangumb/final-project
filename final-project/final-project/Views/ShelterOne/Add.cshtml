@model ShelterOne
<h1>Add Animal</h1>

<form asp-action="add" asp-controller="shelterone" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <input class="form-control" asp-for="Gender" />
    </div>

    <div class="form-group">
        <label asp-for="Breed"></label>
        <input class="form-control" asp-for="Breed" />
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input class="form-control" asp-for="Age">
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input class="form-control" asp-for="Weight" />
    </div>

    <div class="form-group">
        <label asp-for="Color"></label>
        <input class="form-control" asp-for="Color" />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-secondary" asp-action="index" asp-controller="shelterone">Cancel</a>
</form>

