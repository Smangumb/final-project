@*Model Definition*@
@model List<ShelterOne>

<h1>List of Animals</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Breed</th>
        <th>Age</th>
        <th>Color</th>
        <th>Weight</th>
        <th>Image</th>
    </tr>

    @foreach (var shelter in Model)
    {
        <tr>
            <td>@shelter.Name</td>
            <td>@shelter.Gender</td>
            <td>@shelter.Breed</td>
            <td>@shelter.Age</td>
            <td>@shelter.Color</td>
            <td>@shelter.Weight</td>
            <td>@shelter.Image</td>
        </tr>
    }

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4">
                You don't have any animals yet - <a href="/shelterone/add">Add Animal</a>
            </td>
        </tr>
    }

</table>
@if (Model.Count > 0)
{
    <a class="btn btn-primary" asp-action="add" asp-controller="shelterone">Add</a>
}