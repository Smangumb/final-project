@model ShelterOne
@*
    Same page for Add and Edit (actions)
    Add -> Model is null
    Edit -> Model is not null
*@

@{
    // Ternary operator
    var action = Model == null ? "Add" : "Edit";

    var shelterTypes = ViewData["ShelterTypes"] as ICollection<ShelterType>; // ICollection<ShelterType>
    IEnumerable<SelectListItem> ptItems = new SelectList(shelterTypes, "Id", "Description");
}

@if (action == "Add")
{
    <h1>Add new Animal</h1>
}
else
{
    <h1>Edit Property</h1>
}

<form asp-action="@action" asp-controller="shelterone" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Breed"></label>
        <input class="form-control" asp-for="Breed">
        <span asp-validation-for="Breed"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <input class="form-control" asp-for="Gender">
        <span asp-validation-for="Gender"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input class="form-control" asp-for="Age">
        <span asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input class="form-control" asp-for="Weight">
        <span asp-validation-for="Weight"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color"></label>
        <input class="form-control" asp-for="Color">
        <span asp-validation-for="Color"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShelterTypeId"></label>
        <select class="form-control"
                asp-for="ShelterTypeId"
                asp-items="@ptItems"></select>
    </div>

    <button type="submit" class="btn btn-primary">@action</button>
    <a class="btn btn-secondary" asp-action="index" asp-controller="property">Cancel</a>
</form>